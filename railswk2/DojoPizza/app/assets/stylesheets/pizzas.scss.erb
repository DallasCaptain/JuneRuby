input{
    display: block;
    margin: 2px;
}
input:nth-last-child(2){
    
    display: inline-block;
}
form a, input:nth-last-child(2){
    text-decoration: none;
    border: 1px solid black;
    padding: 1px 5px;
    background-color: burlywood;
    
}

td{
    border: 1px solid black;
}

.danger{
    color: red;
}

.container{

    .column{
        width: 40%;
        display: inline-block;
    }
}

